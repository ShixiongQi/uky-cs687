{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "10.x"
    },
    {
      "type": "panel",
      "id": "timeseries",
      "name": "Time series",
      "version": ""
    },
    {
      "type": "panel",
      "id": "table",
      "name": "Table",
      "version": ""
    },
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": ""
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "type": "timeseries",
      "title": "HPA: Desired vs Current Replicas (by HPA)",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "kube_hpa_status_current_replicas{namespace=\"$namespace\"}",
          "legendFormat": "{{hpa}} current",
          "instant": false
        },
        {
          "refId": "B",
          "expr": "kube_hpa_status_desired_replicas{namespace=\"$namespace\"}",
          "legendFormat": "{{hpa}} desired",
          "instant": false
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Deployments: Desired vs Available Replicas (by Deployment)",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "kube_deployment_spec_replicas{namespace=\"$namespace\"}",
          "legendFormat": "{{deployment}} desired",
          "instant": false
        },
        {
          "refId": "B",
          "expr": "kube_deployment_status_replicas_available{namespace=\"$namespace\"}",
          "legendFormat": "{{deployment}} available",
          "instant": false
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      }
    },
    {
      "type": "table",
      "title": "HPA Snapshot: Current + Desired Replicas",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 0,
        "y": 10
      },
      "options": {
        "showHeader": true
      },
      "targets": [
        {
          "refId": "A",
          "expr": "kube_hpa_status_current_replicas{namespace=\"$namespace\"}",
          "legendFormat": "{{hpa}} current",
          "instant": true,
          "format": "table"
        },
        {
          "refId": "B",
          "expr": "kube_hpa_status_desired_replicas{namespace=\"$namespace\"}",
          "legendFormat": "{{hpa}} desired",
          "instant": true,
          "format": "table"
        }
      ],
      "transformations": [
        {
          "id": "labelsToFields",
          "options": {
            "mode": "columns"
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true
            }
          }
        }
      ]
    },
    {
      "type": "table",
      "title": "Deployments Snapshot: Desired / Available / Current",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 12,
        "y": 10
      },
      "options": {
        "showHeader": true
      },
      "targets": [
        {
          "refId": "A",
          "expr": "kube_deployment_spec_replicas{namespace=\"$namespace\"}",
          "legendFormat": "{{deployment}} desired",
          "instant": true,
          "format": "table"
        },
        {
          "refId": "B",
          "expr": "kube_deployment_status_replicas_available{namespace=\"$namespace\"}",
          "legendFormat": "{{deployment}} available",
          "instant": true,
          "format": "table"
        },
        {
          "refId": "C",
          "expr": "kube_deployment_status_replicas{namespace=\"$namespace\"}",
          "legendFormat": "{{deployment}} current",
          "instant": true,
          "format": "table"
        }
      ],
      "transformations": [
        {
          "id": "labelsToFields",
          "options": {
            "mode": "columns"
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true
            }
          }
        }
      ]
    }
  ],
  "schemaVersion": 36,
  "style": "dark",
  "tags": [
    "kubernetes",
    "online-boutique",
    "autoscaling",
    "HPA"
  ],
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "namespace",
        "label": "Namespace",
        "hide": 0,
        "datasource": "${DS_PROMETHEUS}",
        "query": "label_values(kube_deployment_spec_replicas, namespace)",
        "refresh": 2,
        "multi": false,
        "includeAll": false,
        "current": {
          "text": "boutique",
          "value": "boutique"
        }
      }
    ]
  },
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "timepicker": {},
  "timezone": "",
  "title": "Online Boutique HPA & Replicas",
  "uid": "online-boutique-hpa",
  "version": 1
}